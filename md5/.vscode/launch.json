{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "windows",
			"type": "cppvsdbg",
			"request": "launch",
			"preLaunchTask": "rebuild_windows",
			"program": "${workspaceFolder}\\bin\\${fileBasenameNoExtension}_x86_pe_debug.exe",
			"args": [
				"overkill"
			],
			"stopAtEntry": false,
			"cwd": "${fileDirname}",
			"environment": [],
			"console": "integratedTerminal"
		},
		{
			"name": "linux",
			"type": "cppdbg",
			"preLaunchTask": "build_linux",
			"request": "launch",
			"program": "${workspaceRoot}/bin/${fileBasenameNoExtension}",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${fileDirname}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
			]
		},
	]
}