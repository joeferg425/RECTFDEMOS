{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "rebuild",
			"type": "shell",
			"command": "make",
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			},
		},
		{
			"label": "client",
			"type": "shell",
			"isBackground": true,
			"command": "${workspaceFolder}\\bin\\client0",
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "_____"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*Launching.*",
                    "endsPattern": "^.*blah.*$"
                },
            },
		},
		{
			"label": "debug_server",
			"dependsOrder": "sequence",
			"isBackground": true,
			"dependsOn":[
				"rebuild",
				"client"
			]
		}
	]
}